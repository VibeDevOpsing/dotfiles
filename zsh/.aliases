#!/usr/bin/env zsh
# =============================================================================
# ZSH Aliases
# =============================================================================

# =============================================================================
# System & Navigation
# =============================================================================
# Navigation shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias ~='cd ~'
alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'

# Directory listing
alias l='eza -1aglhOMm --icons --git --group-directories-first'
alias ll='eza -alh --icons --git --group-directories-first'
alias la='eza -a --icons --group-directories-first'
alias lt='eza --tree --level=2 --icons'
alias lta='eza --tree --all --level=2 --icons'
alias ltd='eza --tree --level=2 --icons --only-dirs'
alias ls='eza --icons --group-directories-first'
alias lsd='lsd -lhaF --group-dirs first'

# File operations with confirmation
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -I'
alias rmf='rm -rf'
alias mkdir='mkdir -pv'
alias rmdir='rmdir -v'
alias ln='ln -v'

# System monitoring
alias df='df -h'
alias du='du -h -d 1 | sort -h'
alias dus='du -sh * | sort -h'
alias free='free -mth'
alias ps='ps auxf'
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e'
alias top='htop'
alias btm='bottom'
alias htop='htop -t'

# =============================================================================
# Package Management
# =============================================================================
# Homebrew (macOS)
alias brewup='brew update && brew upgrade && brew cleanup'
alias brewinfo='brew info'
alias brewsearch='brew search'
alias brewdeps='brew deps --tree --installed'

# APT (Debian/Ubuntu)
alias aptup='sudo apt update && sudo apt upgrade'
alias apti='sudo apt install'
alias aptr='sudo apt remove'
alias apts='apt search'
alias aptinfo='apt show'

# =============================================================================
# Development Tools
# =============================================================================
# Git shortcuts (compact versions)
alias g='git'
alias gs='git status -sb'
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit'
alias gcm='git commit -m'
alias gco='git checkout'
alias gb='git branch'
alias gd='git diff'
alias gl='git log --oneline --graph --decorate'
alias gpl='git pull'
alias gph='git push'
alias gcl='git clone --depth 1'

# Docker shortcuts
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"'
alias dpsa='docker ps -a --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"'
alias dcu='docker-compose up'
alias dcud='docker-compose up -d'
alias dcd='docker-compose down'
alias dcl='docker-compose logs -f'
alias dprune='docker system prune -af --volumes'

# Kubernetes
alias k='kubectl'
alias kga='kubectl get all'
alias kgp='kubectl get pods'
alias kgs='kubectl get services'
alias kgd='kubectl get deployments'
alias kaf='kubectl apply -f'
alias kdel='kubectl delete'
alias klog='kubectl logs -f'
alias kexec='kubectl exec -it'

# Python
alias py='python3'
alias pip='pip3'
alias pyv='python3 -m venv venv'
alias pya='source venv/bin/activate'
alias pyd='deactivate'
alias pyclean='find . -type d -name __pycache__ -exec rm -rf {} +'
alias jupyter='jupyter notebook'

# Node.js/npm
alias ni='npm install'
alias nid='npm install --save-dev'
alias nig='npm install --global'
alias nr='npm run'
alias ns='npm start'
alias nt='npm test'
alias nrm='rm -rf node_modules package-lock.json && npm install'

# Yarn
alias y='yarn'
alias ya='yarn add'
alias yad='yarn add --dev'
alias yr='yarn remove'
alias ys='yarn start'
alias yt='yarn test'
alias yb='yarn build'

# =============================================================================
# Text Editors
# =============================================================================
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias sv='sudo nvim'
alias vf='nvim $(fzf)'
alias code='code .'
alias subl='sublime'
alias zed='zed .'

# =============================================================================
# Network & System
# =============================================================================
# Network utilities
alias ip='ip -color=auto'
alias myip='curl -s https://checkip.amazonaws.com || curl -s https://ipinfo.io/ip'
alias localip="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias ports='netstat -tulanp 2>/dev/null || lsof -i -P | grep LISTEN'
alias listening='lsof -i -P | grep LISTEN'
alias ping='ping -c 5'
alias speedtest='curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 -'

# Process management
alias k='kill'
alias k9='kill -9'
alias ka='killall'
alias pk='pkill'
alias pgrep='pgrep -la'

# System shortcuts
alias s='sudo'
alias ss='sudo su -'
alias please='sudo'
alias fucking='sudo'
alias c='clear'
alias cl='clear'
alias cls='clear && ls'
alias h='history'
alias hg='history | grep'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias reload='exec $SHELL -l'
alias sourcez='source ~/.zshrc'
alias zshrc='${EDITOR} ~/.zshrc'
alias bashrc='${EDITOR} ~/.bashrc'

# =============================================================================
# File Search & Manipulation
# =============================================================================
# Search
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias rg="rg --sort path --hidden"
alias rgf='rg --files | rg'
alias fd='fd --hidden --follow'
alias find='find . -name'

# Archive operations
alias untar='tar -xvf'
alias ungz='gunzip'
alias unbz2='bunzip2'
alias unzip='unzip -q'
alias tarlist='tar -tvf'
alias ziplist='unzip -l'

# File operations
alias cat='bat --style=plain'
alias batcat='bat'
alias less='less -R'
alias more='less'
alias head='head -n 20'
alias tail='tail -n 20'
alias tailf='tail -f'

# =============================================================================
# macOS Specific
# =============================================================================
# Finder
alias showfiles='defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder'
alias showdesktop='defaults write com.apple.finder CreateDesktop -bool true && killall Finder'
alias hidedesktop='defaults write com.apple.finder CreateDesktop -bool false && killall Finder'
alias showpath='defaults write com.apple.finder _FXShowPosixPathInTitle -bool true && killall Finder'
alias hidepath='defaults write com.apple.finder _FXShowPosixPathInTitle -bool false && killall Finder'

# Spotlight
alias spotlighton='sudo mdutil -a -i on'
alias spotlightoff='sudo mdutil -a -i off'

# Network
alias flushdns='sudo dscacheutil -flushcache && sudo killall -HUP mDNSResponder'
alias enableairport='networksetup -setairportpower en0 on'
alias disableairport='networksetup -setairportpower en0 off'

# Other macOS utilities
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias caffeinate='caffeinate -d'

# =============================================================================
# Safety Aliases
# =============================================================================
alias wget='wget -c'
alias curl='curl -L'
alias dd='dd status=progress'
alias shred='shred -vuz'

# Prevent common mistakes
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# =============================================================================
# Fun & Misc
# =============================================================================
# Fun stuff
alias weather='curl wttr.in'
alias weatherfull='curl v2.wttr.in'
alias moon='curl wttr.in/Moon'
alias cheat='curl cheat.sh'
alias rate='curl rate.sx'
alias crypto='curl rate.sx/btc'
alias dict='curl dict.org/d:'
alias qr='curl qrenco.de'
alias parrot='curl parrot.live'
alias rickroll='curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash'

# Matrix effect
alias matrix='cmatrix -ab'
alias matrixs='cmatrix -abs'

# ASCII art
alias starwars='telnet towel.blinkenlights.nl'
alias maps='telnet mapscii.me'
alias aquarium='asciiquarium'

# Personal shortcuts
alias todo='${EDITOR} ~/Documents/todo.md'
alias notes='${EDITOR} ~/Documents/notes.md'
alias scratch='${EDITOR} ~/Documents/scratch.md'

# Quick servers
alias serve='python3 -m http.server'
alias servephp='php -S localhost:8000'
alias servenode='npx http-server'

# =============================================================================
# Suffix Aliases (zsh specific)
# =============================================================================
# Open files with specific programs based on extension
alias -s {md,markdown,txt}=bat
alias -s {js,ts,jsx,tsx,json}=nvim
alias -s {py,rb,go,rs,c,cpp,h}=nvim
alias -s {yml,yaml,toml,ini,conf}=nvim
alias -s {jpg,jpeg,png,gif,bmp}=open
alias -s {mp4,avi,mkv,mov}=open
alias -s {pdf,doc,docx}=open
alias -s {zip,tar,gz,bz2}=unzip

# =============================================================================
# Global Aliases (zsh specific)
# =============================================================================
alias -g G='| grep'
alias -g L='| less'
alias -g H='| head'
alias -g T='| tail'
alias -g S='| sort'
alias -g U='| uniq'
alias -g C='| wc -l'
alias -g F='| fzf'
alias -g X='| xargs'
alias -g J='| jq'
alias -g B='| bat'
alias -g CP='| pbcopy'
alias -g LL='2>&1 | less'
alias -g NE='2> /dev/null'
alias -g NUL='> /dev/null 2>&1'

# =============================================================================
# Custom/Personal Aliases
# =============================================================================
alias dots='cd ~/dotfiles'
alias work='cd ~/workspace'
alias proj='cd ~/projects'
alias dl='cd ~/Downloads'
alias desk='cd ~/Desktop'
alias lzd='lazydocker'
alias lzg='lazygit'
alias say='fortune | cowsay -f $(cowsay -l | tail -n +2 | tr " " "\n" | shuf -n 1) | lolcat' 